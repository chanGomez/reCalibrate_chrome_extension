{
  "manifest_version": 3,
  "name": "reCalibrate",
  "description": "Resize any component to your liking in real-time.",
  "version": "1.0",
  "permissions": ["debugger", "tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
